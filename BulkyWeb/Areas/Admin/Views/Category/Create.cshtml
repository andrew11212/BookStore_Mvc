@model Category

@{
    ViewBag.Title = "Create Category";
}
<div class="card shadow border-0 mt-4">
    <div class="row">
        <div class="col-12 text-center">
            <div class="card-header bg-secondary bg-gradient text-light ">
                <h2 class="p-0 text-light ">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <form asp-controller="Category" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="border p-3">
                <div class="row pt-2">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control border-0 shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                        <label asp-for="DisplayOrder" class="ms-2"></label>
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary w-100">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary w-100">
                            Category List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
