@model Product

@{
    ViewBag.Title = "Create Product";
}
<div class="card shadow border-0 mt-4 mb-5">
    <div class="row">
        <div class="col-12 text-center">
            <div class="card-header bg-secondary bg-gradient text-light ">
                <h2 class="p-0 text-light ">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-0 mb-4">
        <form asp-controller="Product" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="border p-3 mb-4">
                <div class="row pt-2">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Title" class="form-control border-0 shadow" id="floatingTitleDisabled" />
                        <label asp-for="Title" class="ms-2"></label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <textarea asp-for="Description" class="form-control border-0 shadow" id="floatingTitleDisabled"></textarea>
                        <label asp-for="Description" class="ms-2"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="ISBN" class="form-control border-0 shadow" />
                        <label asp-for="ISBN" class="ms-2"></label>
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Author" class="form-control border-0 shadow" />
                        <label asp-for="Author" class="ms-2"></label>
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="ListPrice" class="form-control border-0 shadow" type="number" step="0.01" />
                        <label asp-for="ListPrice" class="ms-2"></label>
                        <span asp-validation-for="ListPrice" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" class="form-control border-0 shadow" type="number" step="0.01" />
                        <label asp-for="Price" class="ms-2"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price50" class="form-control border-0 shadow" type="number" step="0.01" />
                        <label asp-for="Price50" class="ms-2"></label>
                        <span asp-validation-for="Price50" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price100" class="form-control border-0 shadow" type="number" step="0.01" />
                        <label asp-for="Price100" class="ms-2"></label>
                        <span asp-validation-for="Price100" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary w-100">Create Product</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary w-100">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
