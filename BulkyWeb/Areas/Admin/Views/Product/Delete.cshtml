@model Product

@{
    ViewBag.Title = "Delete Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">


            <!-- Card displaying the Category Title -->
            <div class="card shadow border-0">
                <div class="card-header bg-secondary text-center">
                    <h4 class="card-title text-light"> @ViewBag.Title</h4>
                </div>
            </div>

            <div class="form-control text-danger">
                <h4>Are you sure you want to delete this product?</h4>

                <!-- Form Floating Elements -->
                <div class="form-floating mb-3">
                    <input asp-for="Title" class="form-control" id="floatingTitleDisabled" readonly />
                    <label for="floatingTitle"class="ms-2">Title</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Author" class="form-control" id="floatingAuthorDisabled" readonly />
                    <label for="floatingAuthor "class="ms-2">Author</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ISBN" class="form-control" id="floatingISBNDisabled" readonly />
                    <label for="floatingISBN"class="ms-3">ISBN</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ListPrice" class="form-control" id="floatingListPriceDisabled" readonly />
                    <label asp-for="ListPrice"class="ms-3">List Price</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Price" class="form-control" id="floatingPriceDisabled" readonly />
                    <label asp-for="Price"class="ms-3">Price for 1-50 units</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Price50" class="form-control" id="floatingPrice50Disabled" readonly />
                    <label asp-for="Price50"class="ms-3">Price for 50+ units</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Price100" class="form-control" id="floatingPrice100Disabled" readonly />
                    <label asp-for="Price100"class="ms-3 ">Price for 100+ units</label>
                </div>
            </div>
            <div class="row">

                <form asp-area="Admin" asp-controller="Product" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-control  mb-5 ">
                        <button type="submit" class="btn btn-danger col-6 col-md-3 ">Delete</button>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary col-6 col-md-3 ms-3">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
