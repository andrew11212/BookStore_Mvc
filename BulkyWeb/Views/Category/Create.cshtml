@model Category

@{
    ViewBag.Title = "Create Category";
}

<form method="post">
    @Html.AntiForgeryToken()

    <div class="border p-3 mt-4">
        <div class="row pt-2">
            <h2 class="p-0 text-primary">Create Category</h2>

            <div class="p-0 mb-3">
                <label asp-for="Name" class="text-primary"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="p-0 mb-3">
                <label asp-for="DisplayOrder" class="text-primary"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary w-100">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary w-100">
                    Category List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
