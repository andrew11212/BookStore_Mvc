@model Category

@{
    ViewBag.Title = "Delete Category";
}

<h2>Delete Category</h2>

<div class="border p-3 mt-4">
    <h4>Are you sure you want to delete this category?</h4>
    <div class="mb-3">
        <dl class="row">
            <dt class="col-sm-2 text-primary">Name</dt>
            <dd class="col-sm-10 text-primary">@Model.Name</dd>
            <dt class="col-sm-2 text-primary">Display Order</dt>
            <dd class="col-sm-10 text-primary">@Model.DisplayOrder</dd>
        </dl>
    </div>

    <form asp-controller="Category" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
