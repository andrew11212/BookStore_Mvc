@model Category

@{
    ViewBag.Title = "Delete Category";
}

<div class="card shadow border-0 mt-4">
    <div class="row">
        <div class="col-12 text-center">
            <div class="card-header bg-secondary">
                <h2 class="text-primary p-2">Delete Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="border p-3">
            <h4 class="text-danger">Are you sure you want to delete this category?</h4>

            <div class="mb-3">
                <dl class="row">
                    <dt class="col-sm-2 text-primary">Name</dt>
                    <dd class="col-sm-10 text-primary">@Model.Name</dd>

                    <dt class="col-sm-2 text-primary">Display Order</dt>
                    <dd class="col-sm-10 text-primary">@Model.DisplayOrder</dd>
                </dl>
            </div>

            <form asp-controller="Category" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control border-0 shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                        <label asp-for="DisplayOrder" class="ms-2"></label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary w-100">
                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
