@model List<Category>

@{
    ViewBag.Title = "Category List";
}
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">CategoryList</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i>Create New Category
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class=" btn-group" role="group">
                            <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class=" btn-group" role="group">
                            <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>